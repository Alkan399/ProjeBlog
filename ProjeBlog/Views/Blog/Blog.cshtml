@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model List<ProjeBlog.Models.Content>
@{ 
    string sString = "";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

<div class="container">
    <div>
        <div class="row">
            <div class="col-lg-10">

            </div>
            <div class="col-lg-2">
                <a class="btn btn-primary" asp-controller="Blog" asp-action="Create">Yeni</a>
            </div>
        </div>
    </div>
    <div>
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="row">
                <div class="row w-100" style="background-color:aliceblue;padding:6px;border-style:groove;border-radius:5px">
                    <div class="row w-100" style="margin-left:10px">
                        <form asp-controller="Content" asp-action="ContentPage" method="post" id=@Model[i].Title asp-route-idx="@Model[i].ID">
                            @{

                                string submitTitleId = Model[i].ID.ToString() + "submitTitleId";
                                if (Model[i].Entry.Length > 200)
                                {
                                    sString = Model[i].Entry;
                                    sString = Model[i].Entry.Substring(0, 200);
                                }
                                else
                                {
                                    sString = Model[i].Entry;
                                }

                            }
                            <input class="h2" type="submit" name="submit" id="@submitTitleId" hidden="hidden" value=@Model[i].Title />
                            <a href="#" onclick="document.getElementById('@submitTitleId').click()" style="text-transform:capitalize;text-decoration-thickness:5px;font-size:larger;">@Model[i].Title</a>
                        </form>
                    </div>
                    <div class="row w-100" style="margin-left:12px">
                        <div class="col-lg-10 col-sm-12">
                            <b>
                                @Html.Raw(sString)
                            </b>
                        </div>
                        <div class="col-lg-2 col-sm-12">
                            <a class="icon row" asp-controller="Blog" asp-action="Update" asp-route-id="@Model[i].ID">
                                <i class="bi bi-pen"><label style="font-family:Arial;font-weight:bolder">Düzenle</label></i>
                            </a>
                            <a class="icon row" asp-controller="Blog" asp-action="Delete" asp-route-id="@Model[i].ID">
                                <i class="bi bi-trash"><label style="font-family:Arial;font-weight:bolder">Sil</label></i>
                            </a>
                        </div>
                        
                    </div>
                    
                </div>
            </div>

         }
    </div>


</div>