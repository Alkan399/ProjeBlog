
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model ProjeBlog.Models.Content
<head>
    <meta charset="utf-8">
    <title>CKEditor</title>
    <script src="https://cdn.ckeditor.com/ckeditor5/36.0.1/classic/ckeditor.js"></script>
</head>
<body>
    <div>
        <h3>Yaz</h3>
        <form method="post" asp-controller="Blog" asp-action="Create">
            <div class="mb-3">
                <label class="col-form-label" asp-for="Title">Başlık</label>
                <input type="text" class="form-control" asp-for="Title" />
            </div>
            <div class="mb-3">
                <label class="col-form-label" asp-for="Entry">Yazı</label>
                <textarea type="text" class="form-control" id="editor" asp-for="Entry"></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Kaydet</button>

        </form>

        <script>
            ClassicEditor
                .create(document.querySelector('#editor'))
                .then(editor => {
                    console.log(editor);
                })
                .catch(error => {
                    w
                    console.error(error);
                });
            
        </script>
        <div>
            <p>
                <label></label>
            </p>
        </div>
    </div>

</body>