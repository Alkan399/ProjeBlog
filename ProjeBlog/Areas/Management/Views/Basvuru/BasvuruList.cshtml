@using ProjeBlog.Models
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model List<ProjeBlog.Models.Basvuru>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
@*<script src="js/jquery.min.js" type="text/javascript"></script>*@
<script src="js/jquery.dataTables.js/jquery.dataTables.js/jquery.dataTables.min.js" type="text/javascript"></script>

<div class="box">
    <div class="box-header">
        <h3 class="box-title">Hover Data Table</h3>
        <div class="row">
            <div class="col-md-2">
                <label for="filterFirstName">Adı</label>
                <input type="text" id="filterFirstName" class="form-control" placeholder="Adı">
            </div>
            <div class="col-md-2">
                <label for="filterLastName">Soyadı</label>
                <input type="text" id="filterLastName" class="form-control" placeholder="Soyadı">
            </div>
            <div class="col-md-2">
                <label for="filterDateOfBirth">Doğum Tarihi</label>
                <input type="datetime" id="filterDateOfBirth" class="form-control" placeholder="Doğum Tarihi">
            </div>
            <div class="col-md-2">
                <label for="filterEmail">e-posta</label>
                <input type="email" id="filterEmail" class="form-control" placeholder="e-posta">
            </div>
            <div class="col-md-2">
                <label for="filterStatus">Durum</label>
                <select id="filterStatus" class="form-control">
                    <option value="">Hepsi</option>
                    <option value="Active">Aktif</option>
                    <option value="Inactive">Pasif</option>
                </select>
            </div>
            <div class="col-md-2">
                <label>Sayfada Gösterilecek Kayıt Sayısı</label>
                <select id="dropdownPage" class="form-control">
                    <option value="1">1(Test)</option>
                    <option value="5">5</option>
                    <option value="10">10</option>
                    <option value="20">20</option>
                </select>
            </div>
            <div class="col-md-2">
                <label>&nbsp;</label>
                <button id="filterButton" class="btn btn-primary btn-block">Filtreleri Uygula</button>
            </div>
        </div>
    </div><!-- /.box-header -->
    <div class="box-body">
        <table id="ContentTable" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">FirstName</th>
                    <th scope="col">LastName</th>
                    <th scope="col">Creation Date</th>
                    <th scope="col">Update Date</th>
                    <th scope="col">Status</th>
                    <th scope="col">DateOfBirth</th>
                </tr>
            </thead>
            <tbody>
               
            </tbody>
            <tfoot style="text-align:center">
                <tr>
                    <td colspan="9">
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
<script type="module" src="~/Scripts/BasvuruList.js"></script>