@using ProjeBlog.Models
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model ProjeBlog.Models.ContentSetContent
<head>

    <meta charset="utf-8">
    <title>CKEditor</title>
    <script src="https://cdn.ckeditor.com/ckeditor5/36.0.1/classic/ckeditor.js"></script>
</head>
<div style="width:60%; margin-left:auto; margin-right:auto; padding-top: 80px">
    <form method="post" asp-area="Management" asp-controller="ContentSetContent" asp-action="Create">
        <div class="mb-3">
            <label class="col-form-label" asp-for="ContentSetID">İçerik Seti ID</label>
            <input type="text" class="form-control" asp-for="ContentSetID" readonly />
            <span asp-validation-for="ContentSetID" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="col-form-label" asp-for="ContentID">İçerik ID</label>
            <input type="text" class="form-control" asp-for="ContentID" />
            <span asp-validation-for="ContentID" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="col-form-label" asp-for="Order">Sıra</label>
            <input type="text" class="form-control" asp-for="Order" />
            <span asp-validation-for="Order" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="margin-top:30px; width:25%; height:40px; float:right">Kaydet</button>

    </form>

</div>
