@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using ProjeBlog.Models;
@model ProjeBlog.Models.AppUser

<div class="container mt-5" style="margin: 0 auto; max-width: 600px;">
    <div class="card shadow">
        <div class="card-header text-center bg-primary text-white">
            <h4>Kullanıcı Oluştur</h4>
        </div>
        <div>
            @{
                string message = ViewData["Message"] as string;
            }

            @if (!string.IsNullOrEmpty(message))
            {
                <div class="alert alert-info">
                    @message
                </div>
            }
        </div>
        <div class="card-body">
            <form method="post" asp-area="Management" asp-controller="User" asp-action="Create">
                <div class="form-group mb-3">
                    <label for="UserName">Kullanıcı Adı:</label>
                    <input type="text" class="form-control" asp-for="UserName" id="UserName" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="Password">Şifre:</label>
                    <input type="password" class="form-control" asp-for="Password" id="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="RePassword">Şifre Tekrarı:</label>
                    <input type="password" class="form-control" asp-for="RePassword" id="RePassword" />
                </div>

                <div class="form-group mb-3">
                    <label for="Email">E-posta:</label>
                    <input type="email" class="form-control" asp-for="Email" id="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="FirstName">Ad:</label>
                    <input type="text" class="form-control" asp-for="AppUserDetail.FirstName" id="FirstName" />
                    <span asp-validation-for="AppUserDetail.FirstName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="LastName">Soyad:</label>
                    <input type="text" class="form-control" asp-for="AppUserDetail.LastName" id="LastName" />
                    <span asp-validation-for="AppUserDetail.LastName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="DateOfBirth">Doğum Tarihi:</label>
                    <input type="date" class="form-control" asp-for="AppUserDetail.DateOfBirth" id="DateOfBirth" />
                    <span asp-validation-for="AppUserDetail.DateOfBirth" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="Status">Kullanıcı Durumu:</label>
                    <select class="form-control" asp-for="Role" id="Role">
                        <option value="0">Admin</option>
                        <option value="1">Kullanıcı</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" style="width:50%" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>
