@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using ProjeBlog.Models;
@model ProjeBlog.Models.PasswordChangeViewModel

<div class="container mt-5" style="margin: 0 auto; max-width: 600px;">
    <div>
        @{
            string message = TempData["Message"] as string;
        }

        @if (!string.IsNullOrEmpty(message))
        {
            <div class="alert alert-info">
                @message
            </div>
        }
    </div>
    <div class="card shadow">
        <div class="card-header text-center bg-primary text-white">
            <h4>Parola Değiştir</h4>
        </div>
        <div class="card-body">
            <form method="post" asp-controller="User" asp-action="ChangePassword">
                <div class="form-group mb-3">
                    <label for="OldPassword">Eski Şifre:</label>
                    <input type="password" class="form-control" asp-for="OldPassword" id="OldPassword" required />
                </div>
                <div class="form-group mb-3">
                    <label for="NewPassword">Yeni Şifre:</label>
                    <input type="password" class="form-control" asp-for="NewPassword" id="NewPassword" required />
                </div>
                <div class="form-group mb-3">
                    <label for="ReNewPassword">Yeni Şifre Tekrar:</label>
                    <input type="password" class="form-control" asp-for="ReNewPassword" id="ReNewPassword" required />
                </div>
                <div class="text-center">
                    <button type="submit" style="width:50%" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>