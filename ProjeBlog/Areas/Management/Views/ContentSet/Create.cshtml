@using ProjeBlog.Models
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model ProjeBlog.Models.ContentSet
<head>

    <meta charset="utf-8">
    <title>CKEditor</title>
    <script src="https://cdn.ckeditor.com/ckeditor5/36.0.1/classic/ckeditor.js"></script>
</head>
<div style="width:60%; margin-left:auto; margin-right:auto; padding-top: 80px">
        <form method="post"asp-area="Management" asp-controller="ContentSet" asp-action="Create">
            <div class="mb-3">
                <label class="col-form-label" asp-for="Name">Başlık</label>
                <input type="text" class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="col-form-label" asp-for="Description">Açıklama</label>
                <input type="text" class="form-control" asp-for="Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-primary" style="margin-top:30px; width:25%; height:40px; float:right">Kaydet</button>
        </form>
</div>