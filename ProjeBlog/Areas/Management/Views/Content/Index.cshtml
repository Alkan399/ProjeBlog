
@using ProjeBlog.Models
@using ProjeBlog.Enums
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model List<ProjeBlog.Models.Content>



<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
@*<script src="js/jquery.min.js" type="text/javascript"></script>*@
@*<script src="js/jquery.dataTables.js/jquery.dataTables.js/jquery.dataTables.min.js" type="text/javascript"></script>*@
<script src="/management/plugins/datatables/jquery.dataTables.js"></script>


<!DOCTYPE html>
<h3>Kullanıcı İçerikleri</h3>
<div class="box">  
    
    <div class="box-header">
        <div class="row">
            
            <div class="col-md-2">
                <label for="filterTitle">Başlık</label>
                <input type="text" id="filterTitle" class="form-control" placeholder="Başlık">
            </div>
            <div class ="col-md-2">
                <label for="filterCategory">Kategori</label>
                <select id="filterCategory" class="form-control">
                    <option value="">Hepsi</option>
                    @{
                        var Categories = ViewData["Categories"] as List<Category>;
                        foreach (var category in Categories)
                        {
                            if (category.Status == ProjeBlog.Enums.DataStatus.Deleted)
                            {
                                <option value="@category.ID">@category.Name (Silindi)</option>
                            }
                            else
                            {
                                <option value="@category.ID">@category.Name</option>
                            }
                        }
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label for="filterEntry">İçerik üzerinden ara</label>
                <input type="text" id="filterEntry" class="form-control" placeholder="Kelime">
            </div>
            <div class="col-md-2">
                <label for="filterStatus">Durum</label>
                <select id="filterStatus" class="form-control">
                    <option value="">Hepsi</option>
                    <option value="Active">Aktif</option>
                    <option value="Inactive">Pasif</option>
                </select>
            </div>
            <div class="col-md-2">
                <label>Sayfada Gösterilecek Kayıt Sayısı</label>
                <select id="dropdownPage" class="form-control">
                    <option value="1">1(Test)</option>
                    <option value="5">5</option>
                    <option value="10">10</option>
                    <option value="20">20</option>
                </select>
            </div>
            <div class="col-md-2">
                <label>&nbsp;</label>
                <button id="filterButton" class="btn btn-primary btn-block">Filtreleri Uygula</button>
            </div>
        </div>
    </div><!-- /.box-header -->
    <div class="box-body">
        <table id="tableContents" class="table table-bordered table-hover">
            <thead>
                <tr style="text-align:center;">
                    <th scope="col" style="text-align:center;">Id</th>
                    <th scope="col" style="text-align:center;">Kullanıcı</th>
                    <th scope="col" style="text-align:center; width:75px">Kapak Resmi</th>
                    <th scope="col" style="text-align:center;">Başlık</th>
                    <th scope="col" style="text-align:center;">Kategori</th>
                    <th scope="col" style="text-align:center; max-width:40px">Oluşturma Tarihi</th>
                    <th scope="col" style="text-align:center;">Güncelleme Tarihi</th>
                    <th scope="col" style="text-align:center;">Durumu</th>
                    <th scope="col" style="text-align:center;">İşlem</th>
                </tr>
            </thead>
            <tbody>
                
            </tbody>
            <tfoot style="text-align:center">
                <tr>
                    <td colspan="9">

                    </td>
                </tr>
            </tfoot>
        </table>
    </div><!-- /.box-body -->
</div><!-- /.box -->
<script type="module" src="~/Scripts/UserContentIndex.js"></script>