@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model List<ProjeBlog.Models.Content>



<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
@*<script src="js/jquery.min.js" type="text/javascript"></script>*@
@*<script src="js/jquery.dataTables.js/jquery.dataTables.js/jquery.dataTables.min.js" type="text/javascript"></script>*@
<script src="/management/plugins/datatables/jquery.dataTables.js"></script>


<!DOCTYPE html>
<div class="box">  
    <h4>İçerik Yönetim</h4>
    <div class="box-header">
        <div class="row">
            <div class="col-md-2">
                <label for="filterUserName">Kullanıcı Adı</label>
                <input type="text" id="filterUserName" class="form-control" placeholder="Kullanıcı Adı">
            </div>
            <div class="col-md-2">
                <label for="filterTitle">Başlık</label>
                <input type="text" id="filterTitle" class="form-control" placeholder="Başlık">
            </div>
            <div class="col-md-2">
                <label for="filterEntry">İçerik üzerinden ara</label>
                <input type="text" id="filterEntry" class="form-control" placeholder="Kelime">
                
            </div>
            <div class="col-md-2">
                <label for="filterStatus">Durum</label>
                <select id="filterStatus" class="form-control">
                    <option value="">Hepsi</option>
                    <option value="Active">Aktif</option>
                    <option value="Inactive">Pasif</option>
                </select>
            </div>
            <div class="col-md-2">
                <label>&nbsp;</label>
                <button id="filterButton" class="btn btn-primary btn-block">Filtreleri Uygula</button>
            </div>
        </div>
    </div><!-- /.box-header -->
    <div class="box-body">
        <table id="tableContents" class="table table-bordered table-hover">
            <thead>
                <tr style="text-align:center;">
                    <th scope="col" style="text-align:center;">Id</th>
                    <th scope="col" style="text-align:center;">Kullanıcı</th>
                    <th scope="col" style="text-align:center;" style="width:75px">Kapak Resmi</th>
                    <th scope="col" style="text-align:center;">Başlık</th>
                    <th scope="col" style="text-align:center;">Oluşturma Tarihi</th>
                    <th scope="col" style="text-align:center;">Güncelleme Tarihi</th>
                    <th scope="col" style="text-align:center;">Durumu</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr scope="row">
                        <td>
                            @Html.DisplayFor(modelItem => item.ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AppUserID)
                        </td>
                        <td>
                            <a href="@item.CoverImagePath">
                                <img src="@item.CoverImagePath" style="width:60px">
                            </a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpdatedDate)
                        </td>

                        <td>
                            @Html.ActionLink("Edit", "Update", new { id = item.ID }) |
                            @Html.ActionLink("Details", "DetailsManagement", new { id = item.ID })  |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot style="text-align:center">
                <tr>
                    <td colspan="8">

                    </td>
                </tr>
            </tfoot>
        </table>
    </div><!-- /.box-body -->
</div><!-- /.box -->
<script src="~/Scripts/ListAllContents.js"></script>