@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model ProjeBlog.Models.Content

<div class="container">
    <div>
        <!-- Sil Butonu -->
        <a class="btn btn-danger"
           style="margin-top:15px;margin-bottom:15px;margin-left:20px;margin-right:0;float:right;width:15%"
           href="@Url.Action("DeleteManagement", new { id = Model.ID })"
           onclick="return confirm('Bu öğeyi silmek istediğinizden emin misiniz?');">
            Sil
        </a>

        <!-- Güncelle Butonu -->
        <a class="btn btn-primary"
           style="margin-top:15px;margin-bottom:15px;margin-left:auto;margin-right:0;float:right;width:25%"
           href="@Url.Action("Update", new { id = Model.ID })">
            Güncelle
        </a>
    </div>

    <!-- Sayfa İçeriği -->
    <div class="box" style="max-width: 100%; margin: 0 auto; overflow: hidden; padding: 20px;">
        <div class="row center" style="margin-top: 30px; text-align: center;">
            <div style="max-width: 100%; margin: 0 auto;">
                <!-- Başlık -->
                <div class="row center" style="padding-top: 30px; text-align: center; max-width: 100%; margin:auto;">
                    <h3 style="text-align: center;">@Model.Title</h3>
                </div>

                <!-- Kapak Görseli -->
                <div class="row center" style="padding-top: 30px; text-align: center; max-width: 100%; height: auto; margin:auto;">
                    <img class="center"
                         style="margin: auto; max-width: 100%; width: 60%; height: auto; display: block;"
                         src="@Model.CoverImagePath"
                         alt="Cover Image">
                </div>

                <!-- İçerik -->
                <div class="row center" style="padding-top: 30px; text-align: center; max-width: 100%; margin:auto;">
                    <article style="margin: auto; text-align: center; word-wrap: break-word;">
                        @Html.Raw(@Model.Entry)
                    </article>
                </div>
            </div>
        </div>
    </div>

</div>
