@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Html
@using ProjeBlog.Models;
@model List<ProjeBlog.Models.Content>
@{ 
    string sString = "";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

<div class="container col-lg-10 col-sm-10" style="border-right: 2px groove;">
    @{
        var methods = new Methods();
        for (int i = 0; i < Model.Count; i++)
        {
        
            sString = methods.BlogContentFormatting(Model[i]) + "...";

            <!-- Her içerik için dış katman -->
            <div class="" style="background-color:aliceblue">
                
                <div class="container d-flex flex-wrap justify-content-center align-items-center" style="padding-top:3vh; width:auto; text-align:center;">

                    <div class="row col-sm-6 col-md-8 col-lg-11" style="border-bottom-style:groove; border-width:2px; text-align:center; max-width:100%;background-color:white">
                        <div class="row" style="width:100%;background-color:#ADD8E6;text-align:center;display:inline-flex;margin-bottom:2%;margin-top:2%">
                            <p style="color:white;" class="post_text">@Model[i].CreatedDate</p>
                            <p style="color:white;" class="post_text">@Model[i].Views defa tıklandı</p>
                        </div>
                        <!-- Sol kısım: İçerik -->
                        <div style="padding:3%; text-align:center; margin-left:auto; margin-right:auto;">
                            
                            @if (Model[i].CoverImagePath != null)
                            {
                                <div class="about_img">
                                    <img style="max-height:40vh;" src="@Model[i].CoverImagePath">
                                </div>
                            }
                            
                            <h2 class="most_text">
                                <a asp-controller="Blog" asp-action="ContentPage" asp-route-idx="@Model[i].ID">
                                    @Model[i].Title
                                </a>
                            </h2>
                            <div class="content-preview">
                                <div>@(new HtmlString(sString))@*Html.Raw(sString)*@</div>
                            </div>
                            
                        </div>
                        <div class="row" style ="width:100%;background-color:#ADD8E6;text-align:center;display:inline-flex;margin-bottom:2%;margin-top:2%">
                            <div class=" col-lg-8">
                                <ul style="list-style: none; padding: 0; margin: 0; display: flex; gap: 10px;">
                                    <li><a href="#"><img src="/images/fb-icon.png"></a></li>
                                    <li><a href="#"><img src="/images/twitter-icon.png"></a></li>
                                    <li><a href="#"><img src="/images/instagram-icon.png"></a></li>
                                </ul>
                            </div>
                            <div class="read_bt col-lg-4">
                                <a style="width: auto;" asp-controller="Blog" asp-action="ContentPage" asp-route-idx="@Model[i].ID">Okumaya Devam Et</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
<div class="col-lg-2 col-sm-2" style="width:100%;height:100%;">
    <div class="newsletter_main">
        <h1 class="recent_taital">Recent post</h1>
        <div class="recent_box">
            <div class="recent_left">
                <div class="image_6"><img src="~/images/img-6.png"></div>
            </div>
            <div class="recent_right">
                <h3 class="consectetur_text">Consectetur adipiscing</h3>
                <p class="dolor_text">ipsum dolor sit amet, consectetur adipiscing </p>
            </div>
        </div>
        <div class="recent_box">
            <div class="recent_left">
                <div class="image_6"><img src="~/images/img-7.png"></div>
            </div>
            <div class="recent_right">
                <h3 class="consectetur_text">Consectetur adipiscing</h3>
                <p class="dolor_text">ipsum dolor sit amet, consectetur adipiscing </p>
            </div>
        </div>
    </div>
</div>