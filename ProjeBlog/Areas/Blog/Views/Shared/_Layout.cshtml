        window.onscroll = function () {
        const header = document.getElementById("header");
        const navLinks = header.querySelectorAll(".nav-link"); // <a> elemanlarını seçiyoruz

        if (window.scrollY > 50) {
            header.style.top = "-4%"; // Header biraz yukarı
            navLinks.forEach(link => {
                link.style.transform = "translateY(50%)"; // Nav-link'leri aşağı kaydır
            });
        } else {
            header.style.top = "0"; // Header eski yerine
            navLinks.forEach(link => {
                link.style.transform = "translateY(0)"; // Nav-link'ler eski yerine
            });
        }
    };
</script>